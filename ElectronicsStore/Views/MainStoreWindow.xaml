<Window x:Class="ElectronicsStore.Views.MainStoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electronics Store" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30"
        Icon="C:\Users\arbuz\source\repos\ElectronicsStore\ElectronicsStore\images\logo.jpg">
        

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        
        
        <Border Grid.Row="0" Background="#FF252526" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ProductsButton" Content="Магазин" Width="150" Height="50" Margin="10,0" Click="ProductsButton_Click"/>
                <Button x:Name="CartButton" Content="Корзина" Width="150" Height="50" Margin="10,0" Click="CartButton_Click"/>
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>