<Window x:Class="ElectronicsStore.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF2D2D30"
        Icon="C:\Users\arbuz\source\repos\ElectronicsStore\ElectronicsStore\images\logo.jpg">
    

    <Grid>
        <Border CornerRadius="10" Background="#FF252526" Width="350" Height="250" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Добро пожаловать" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBox x:Name="UsernameTextBox" Tag="Логин" Margin="0,0,0,10" Foreground="White" Background="#FF3E3E40" BorderBrush="#FF007ACC" Height="30"/>
                <PasswordBox x:Name="PasswordBox" Tag="Пароль" Margin="0,0,0,20" Foreground="White" Background="#FF3E3E40"  BorderBrush="#FF007ACC" Height="30"/>
                <Button x:Name="LoginButton" Content="Войти" Width="120" Height="40" HorizontalAlignment="Center" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>